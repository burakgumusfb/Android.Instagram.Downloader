<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ab7c4c" />
            <gradient android:angle="-90" android:startColor="#586785" android:endColor="#9b3598"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7f4cab" />
            <solid android:color="#9b3598"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ab7c4c" />
            <gradient android:angle="-90" android:startColor="#586785" android:endColor="#9b3598" />
        </shape>
    </item>
</selector>